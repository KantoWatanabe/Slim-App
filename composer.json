{
    "name": "kantowatanabe/slim-app",
    "description": "Slim skeleton app",
    "type": "project",
    "license": "MIT",
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.3",
        "php-di/php-di": "^6.3",
        "twig/twig": "^3.3",
        "monolog/monolog": "^2.2",
        "symfony/console": "^5.2",
        "symfony/lock": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "vendor/bin/phpunit",
        "csfix": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist.php"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0"
    }
}
